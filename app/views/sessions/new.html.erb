<h1 class="text-center mb-4">Welcome to MessageMe - A Complete Chat App</h1>
<div class="text-center mt-2">
  <i class="bi bi-power text-warning bg-light rounded-circle p-3 mb-4 d-inline-block" style="font-size: 2rem;"></i>
  <h4 class="mb-0">Log in to continue</h4>
</div>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card p-4">
        <div class="row align-items-center">
          <div class="col-md-6 border-end">
            <%= form_with(scope: :session, url: login_path, local: true, data: { turbo: false }) do |f| %>
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                  <%= f.text_field :username, class: "form-control", id: "username", placeholder: "Username" %>
                </div>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                  <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Password" %>
                </div>
              </div>
              <%= f.submit "Login", class: "btn btn-primary w-100" %>
            <% end %>
          </div>

          <div class="col-md-1 text-center">
            <strong>OR</strong>
          </div>

          <div class="col-md-5 text-center">
            <button class="btn btn-light border">
              <i class="bi bi-pencil-square me-2"></i> Sign Up
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
