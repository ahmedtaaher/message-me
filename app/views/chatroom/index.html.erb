<h4 class="text-center mt-5">
  <span class="d-inline-flex align-items-center justify-content-center border border-4 rounded-circle mb-3 bg-white border-orange" style="width: 100px; height: 100px;">
    <img src="<%= asset_path('favicon.png') %>" alt="Say Something" style="width: 50px; height: 50px;">
  </span>
  <br>
  Say Something
</h4>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-body" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;" id="messages">
                    <div class="mb-4" id="message-container">
                        <%= render @messages %>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <%= form_with(model: @message, url: message_path, html: { class: "d-flex", role: "form" }, data: { turbo: false }, local: true) do |f| %>
                        <div class="input-group w-100">
                            <%= f.text_field :body, placeholder: "Type a message...", class: "form-control", autocomplete: "off"  %>
                            <%= f.submit "Send", class: "btn btn-primary" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a href="#" class="text-decoration-none">Home</a></li>
                    <li class="list-group-item"><a href="#" class="text-decoration-none">Messages</a></li>
                    <li class="list-group-item"><a href="#" class="text-decoration-none">Friends</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>







